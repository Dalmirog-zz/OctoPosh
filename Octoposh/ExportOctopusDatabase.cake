Task("Export-Octopus-Backup")
	//.IsDependentOn("Clean") 
    .Description("Exports and Octopus backup")	
    .Does(() =>
{
    StartPowershellFile("Scripts/OctopusServer.ps1", new PowershellSettings()
        .SetFormatOutput()
        .SetLogOutput()
		.WithArguments(args=>
		{
			args.Append("Action","ExportBackup");
		}));
});

//////////////////////////////////////////////////////////////////////
// TASK TARGETS
//////////////////////////////////////////////////////////////////////

Task("Default")
    .IsDependentOn("Export-Octopus-Backup");

//////////////////////////////////////////////////////////////////////
// EXECUTION
//////////////////////////////////////////////////////////////////////

RunTarget(target);